{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "diskName": {
      "type": "string",
      "metadata": {
        "description": "Name of the disk to update tags."
      }
    },
    "resourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Resource group of the disk."
      }
    },
    "newTags": {
      "type": "object",
      "metadata": {
        "description": "Tags to add or update."
      }
    }
  },
  "variables": {
    "diskId": "[resourceId('Microsoft.Compute/disks', parameters('diskName'))]",
    "existingTags": "[if(not(empty(reference(variables('diskId')).tags)), reference(variables('diskId')).tags, {})]",
    "mergedTags": "[union(variables('existingTags'), parameters('newTags'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/disks",
      "apiVersion": "2023-10-02",
      "name": "[parameters('diskName')]",
      "location": "[resourceGroup().location]",
      "tags": "[variables('mergedTags')]",
      "properties": {}
    }
  ]
}
